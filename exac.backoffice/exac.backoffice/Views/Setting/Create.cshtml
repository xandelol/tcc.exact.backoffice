        <form role="form" id="form1" method="post" action="/setting/create" class="validate" novalidate="novalidate">
					
            @Html.HiddenFor(h => h.Id)
            @Html.HiddenFor(h => h.Key)
            @Html.HiddenFor(h => h.Type)
            @Html.HiddenFor(h => h.Name)
            <div class="form-group">
                <label class="control-label">Name</label>
                
                @Html.TextBoxFor(f => f.Name, new
                {
                    @class = "form-control",
                    disabled = "disabled"
                })
                @Html.ValidationMessageFor(f => f.Name)
            </div>
	        
            <div class="form-group" id="form-value">
                <label class="control-label">Valor</label>
                @Html.TextBoxFor(f => f.Value, new
                {
                    @class = "form-control"
                })
                @Html.ValidationMessageFor(f => f.Value)
            </div>
			
            <div class="form-group">
                <button type="submit" class="btn btn-success">Salvar</button>
                <a class="btn btn-white" href="~/setting/index">Cancelar</a>
            </div>
					
