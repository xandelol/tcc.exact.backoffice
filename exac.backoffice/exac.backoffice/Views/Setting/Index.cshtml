@using System.Collections.Generic
@using exac.backoffice.Models
@model System.Collections.Generic.List<QuestionViewModel>

@{
    ViewBag.Title = ViewData["Title"];
    Layout = "_Layout";
}
<!-- Basic Setup -->
<div class="panel panel-default">
    <div class="panel-body">

        <script type="text/javascript">
            jQuery(document).ready(function($) {
                $("#menu-setting").addClass("active");
                $("#table-1").dataTable({
                    "processing": true,
                    "serverSide": true,
                    "orderMulti": false,
                    "language": language,
                    "ajax": {
                        "url": "list",
                        "type": "POST",
                        "dataType": "json"
                    },
                    "columnDefs":
                    [
                        {
                            "visible": false,
                            "searchable": false
                        }
                    ],
                    "columns": [
                        { "data": "name", "name": "Name", "width": "70%" },
                        { "data": "value", "name": "Value", "width": "22%", "className": "text-center" },
                        {
                            "width": "8%",
                            "orderable": false,
                            "className": "text-center",
                            "render": function(data, type, full, meta) {
                                return '<a class="btn btn-icon btn-xs btn-blue" href="/setting/create/' +
                                    full.id +
                                    '"><i class="fa-edit"></i></a>';
                            }
                        }
                    ]
                });
            });
        </script>
        <div class="row">
            <table id="table-1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Configuração</th>
                    <th>Valor</th>
                    <th></th>
                </tr>
                </thead>

            </table>

        </div>

    </div>
</div>